{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node"] // Add this line to include Node.js types
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  